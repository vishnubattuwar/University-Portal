{
  "name": "universityPortal",
  "version": "1.0.0",
  "description": "A simple CAP project.",
  "dependencies": {
    "@cap-js/hana": "^2",
    "@sap/cds": "^9",
    "dotenv": "^17.2.3",
    "express": "^4",
    "nodemailer": "^7.0.9"
  },
  "devDependencies": {
    "@cap-js/sqlite": "^2",
    "@sap/cds-dk": "^9",
    "cds-plugin-ui5": "^0.13.0",
    "rimraf": "^5.0.5",
    "mbt": "^1.2.29"
  },
  "scripts": {
    "start": "cds-serve",
    "watch-studentportal": "cds watch --open ns.studentportal/index.html?sap-ui-xx-viewCache=false --livereload false",
    "undeploy": "cf undeploy universityPortal --delete-services --delete-service-keys --delete-service-brokers",
    "build": "rimraf resources mta_archives && mbt build --mtar archive",
    "deploy": "cf deploy mta_archives/archive.mtar --retries 1"
  },
  "private": true,
  "cds": {},
  "workspaces": [
    "app/*"
  ],
  "sapux": [
    "app/studentportal"
  ]
}
